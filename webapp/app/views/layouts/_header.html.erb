<header class="bg-gray-800 text-white px-4 py-2 flex justify-between items-center">
  <h1 class="text-xl font-bold">
    <a href="/" class="text-gray-300 hover:text-white">♊️ GemiNews 🗞️</a>
      <%= Rails.env == 'production' ? '' : "(#{Rails.env.to_s[0..2]})" %>
  </h1>
    <nav class="space-x-4">
      <!-- models -->
      <a href="/" class="text-gray-300 hover:text-white">🏡</a>
      <a href="/articles" class="text-gray-300 hover:text-white">📰 Articles</a>
      <a href="/categories" class="text-gray-300 hover:text-white">🏷️ Categories</a>
      <a href="/smart_queries" class="text-gray-300 hover:text-white">🧠 Queries</a>

      <!-- pages -->
      <!-- about is now the home -lets save some space, getting bloated
      <a href="/pages/about" class="text-gray-300 hover:text-white">📚 About</a>
      -->
      <a href="/pages/graphs" class="text-gray-300 hover:text-white">📈 Graphs</a>
      <a href="/pages/gcp" class="text-gray-300 hover:text-white">📈☁️ Stats|GCP</a>
      <a href="/pages/assistant" class="text-gray-300 hover:text-white">💁🏻 Assistant</a>
    </nav>
    <div class="flex items-center">
      <form action="/smart_queries/show" method="get" class="flex-grow mr-4">
        <input type="text" name="query" placeholder="Bella RAG-a" class="rounded-md px-2 py-1 border border-gray-700 focus:outline-none focus:ring-1 focus:ring-blue-500 text-black">
        <!-- originale pre gemini
          <input type="text" name="query" placeholder="Search for.." class="rounded-md px-2 py-1 border border-gray-700 focus:outline-none focus:ring-1 focus:ring-blue-500">
        -->
        <button type="submit" class="ml-2 text-gray-300 hover:text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
        </button>
      </form>
    </div>
  </header>

<% if ShowDemoz %>
